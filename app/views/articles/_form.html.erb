<div class="container">
  <div class="row">
    <div class="col-md-9">
      <form class="additional-sir-trevor-form">
        <div class="form-group">
          <strong>
            <%= text_field_tag :title, article.try(:title),
                               class: 'form-control input-lg',
                              placeholder: 'Enter Article Title Here' %>
          </strong>
        </div><!-- form-group -->
      </form>
      <%= form_tag article, method: article.new_record? ? :post : :patch,
                            class: 'sir-trevor-form' do %>
        <%= text_area_tag :sir_trevor_content, article.try(:to_sir_trevor),
                          class: 'js-sir-trevor-instance' %>
        <%= submit_tag 'Save Article', class: 'btn btn-success btn-block' %>
      <% end %>
    </div><!-- col-md-9 -->
    <div class="col-md-3">
      <div class="panel-group">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">
              <a data-toggle="collapse" href="#subcategories-checkboxes">
                Add Subcategory
                <i class="glyphicon glyphicon-chevron-right pull-right" />
                <i class="glyphicon glyphicon-chevron-down pull-right" />
              </a>
            </h4>
          </div><!-- panel-heading -->
          <div id="subcategories-checkboxes" class="panel-collapse collapse">
            <div class="panel-body">
              <form class="additional-sir-trevor-form">
                <%= collection_check_boxes(:article, :categorizations,
                              Subcategory.all, :id, :name) do |b| %>
                  <div class="checkbox">
                    <%= b.label do %>
                      <%= b.check_box %>
                      <%= b.text %>
                    <% end %>
                  </div><!-- check_box -->
                <% end %>
              </form>
            </div> <!-- panel-body -->
          </div> <!-- subcategories-checkbox -->
        </div> <!-- panel-default -->
        <%= render :partial => "articles/articlefaq" %>
      </div> <!-- panel-group -->
    </div> <!-- col-md-3 -->
  </div> <!-- row -->
</div> <!-- container -->
