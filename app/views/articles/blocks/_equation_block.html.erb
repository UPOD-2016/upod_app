
<div class='equation-block' style="text-align:center;">
	<div class='equation block-equation', style="font-size:2em;">
		<script type='math/asciimath'><%= block.equation %></script>
	</div>
	<span class='equation-label', style="font-size:1.2em;"><%= block.label %></span>
	<div class='variables', style="font-size:1.2em;">
		<% block.equation_block_variables.each do |var| %>
			<span class='equation variable-equation', style="font-size:1.2em;">
				<script type='math/asciimath'><%= var.variable %></script> = <%= var.description %>
			</span>
		<% end %>
	</div>
</div>
<br><br>
