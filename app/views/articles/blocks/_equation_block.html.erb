<div class='equation-block', align=center>
	<div class='equation block-equation', align=center>
		<script type='math/asciimath'><%= block.equation %></script>
	</div>
	<span class='equation-label'><%= block.label %></span>
	<div class='variables', align=center>
		<% block.equation_block_variables.each do |var| %>
			<span class='equation variable-equation'>
				<script type='math/asciimath'><%= var.variable %></script> = <%= var.description %>
			</span>
		<% end %>
	</div>
</div>
