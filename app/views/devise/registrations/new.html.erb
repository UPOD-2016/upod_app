<% title "Sign Up" %>
<div class="container"  align="center">
	<div class="col-xs-6 col-md-4 col-md-offset-4">
	<form class="form-signin">
	<h2>Sign up</h2>
	<br />
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="field">
	    <%= f.label :email, :class => "sr-only" %>
	    <%= f.email_field :email, autofocus: true, placeholder: "Email Address", :class => "form-control" %>
	  </div>
	  <br />
	  <div class="field">
	    <%= f.label :password, :class => "sr-only"%>
	    <% if @minimum_password_length %>
	    <em>(password <%= @minimum_password_length %> characters minimum)</em>
	    <% end %><br />
	    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", :class => "form-control"  %>
	  </div>
	  <br />
	  <div class="field">
	    <%= f.label :password_confirmation, :class => "sr-only" %>
	    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", :class => "form-control"  %>
	  </div>
	  <br />
	  <div class="actions">
	    <%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %>
	  </div>
	  <br />
	<% end %>

	<%= render "devise/shared/links" %>
	</form>
	</div>
</div>
