<body style='background-color:#330072;'>
  <div class='col-md-6 col-md-offset-3'>
    <%= link_to root_path do %>
      <%= image_tag('logo.png', :class => 'center-block',
      :style => 'max-width: 98%; margin-top: 5%; margin-bottom: 40px;')%>
    <% end %>
  </div>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_tag articles_path, method: :get, role: 'search' do %>
      <div class='form-group' style='display:inline;'>
        <div class='input-group'>
          <%= render partial: 'static_pages/search_form' %>
        </div> <!-- .input-group -->
      </div> <!-- .form-group -->
    <% end %>
  </div>
</body>
