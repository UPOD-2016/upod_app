<% title "#{@subcategory.name}" %>
<div class="container", style="margin-bottom:150px;">
  <div class="jumbotron">
    <h2><%= @subcategory.name %></h2>
    <p>
    <%= @subcategory.description %>
    </p>
  </div>
  <hr>
  <div class="container" style="margin-top:30px;text-align:left;padding:10px;">

  <% @subcategory.articles.each do |article| %>
  <div class="col-sm-4" style="padding:10px;" >
    <h4>
      <strong style="text-align:center;">
        <%= link_to article.title, article %>
      </strong>
    </h4>
    <p>
      <% @text = article.blocks.map{ |b| b.specific.body if b.specific.respond_to?(:body)} %>
      <% unless @text.blank? || @text.first.blank? %>
        <%= @text.first.first(75) << '...'  %>
      <% else %>
        ...
      <% end %>
    <hr>
  </div>
  <% end %>

  </div>
</div>
