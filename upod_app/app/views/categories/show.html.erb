<div class="container">
  <div class="jumbotron">
    <h2><%= @category.name %></h2>
    <span>
    <%= @category.description %>
    </span>
  </div>
  <hr>
  <div class="container" style="margin-top:30px;text-align:center;padding:10px;">

	<% @category.subcategories.each do |subcategory| %>
	<div class="col-sm-4" style="padding:10px;" >
		<h4><strong>
		<%= link_to subcategory.name, subcategory %>     
		</strong></h4>
		<span>
		<%= subcategory.description %>
		</span>
		<hr>
	</div>
	<% end %>

  </div>
</div>
